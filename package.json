{
  "name": "spooftify",
  "version": "1.0.0",
  "description": "Lightweight MVP scaffold for Spooftify",
  "type": "module",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:web\" \"npm run dev:api\"",
    "dev:web": "vite",
    "dev:api": "tsx watch src/server/index.ts",
    "build": "vite build && tsc -p tsconfig.server.json",
    "test": "pnpm test:unit && pnpm test:api",
    "test:unit": "vitest run --config vitest.unit.config.ts",
    "test:api": "vitest run --config vitest.api.config.ts",
    "test:e2e": "playwright test",
    "test:e2e:nix": "LIBGBM_PATH=\"$(nix eval --raw nixpkgs#libgbm.outPath)/lib\" && LD_LIBRARY_PATH=\"$LIBGBM_PATH:$LD_LIBRARY_PATH\" playwright test",
    "test:ci": "pnpm test && pnpm test:e2e",
    "test:ci:nix": "pnpm test && pnpm test:e2e:nix"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/supertest": "^6.0.3",
    "@vitejs/plugin-react": "^5.0.2",
    "concurrently": "^9.2.1",
    "jsdom": "^26.1.0",
    "supertest": "^7.1.4",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "vitest": "^3.2.4"
  }
}